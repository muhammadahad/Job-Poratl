@model Ahad_Project.Models.Interview

@{ ViewData["Title"] = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="message shadow p-2 mb-4 mt-5 bg-white"><h2>Department</h2></div>
<div class="Compose" style="height:auto; width:50%; margin:auto;">

    <div class=" shadow p-5  mb-4 bg-white" style="border-radius: 20px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VacId" class="control-label"></label>
                <select asp-for="VacId" class="form-control" asp-items="ViewBag.VacId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InterviewerOne" class="control-label"></label>
                <select asp-for="InterviewerOne" class="form-control" asp-items="ViewBag.InterviewerOne"></select>
            </div>
            <div class="form-group">
                <label asp-for="InterviewerTwo" class="control-label"></label>
                <select asp-for="InterviewerTwo" class="form-control" asp-items="ViewBag.InterviewerTwo"></select>
            </div>
            <div class="form-group">
                <label asp-for="InterviewerThree" class="control-label"></label>
                <select asp-for="InterviewerThree" class="form-control" asp-items="ViewBag.InterviewerThree"></select>
            </div>

            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-warning btn-lg w-100 mt-5" style="border-radius: 10px; color: white;">Create Department</button>
                <button  asp-action="Index" class="btn btn-warning btn-lg w-100 mt-5" style="border-radius: 10px; color: white;">Back</button>
            </div>

        </form>
    </div>
</div>