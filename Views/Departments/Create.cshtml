@model Ahad_Project.Models.Department

@{ ViewData["Title"] = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml"; }



<div class="message shadow p-2 mb-4 mt-5 bg-white"><h2>Department</h2></div>
<div class="Compose" style="height:auto; width:50%; margin:auto;">

    <div class=" shadow p-5  mb-4 bg-white" style="border-radius: 20px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
       
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-warning btn-lg w-100" style="border-radius: 10px; color: white;">Apply</button>
                <button asp-action="Index" class="btn btn-warning btn-lg w-100 mt-5" style="border-radius: 10px; color: white;">Back</button>
            </div>

        </form>
    </div>
</div>