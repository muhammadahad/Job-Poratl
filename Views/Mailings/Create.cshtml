@model Ahad_Project.Models.Mailing

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="message shadow p-2 mb-4 mt-5" style=" background-color: #484C7F; color:white"><h2>Create Mail</h2></div>
<div style="height:auto; width:50%; margin:auto;">

    <div class="row shadow p-5 bg-white mb-4" style="border-radius: 20px; color:white">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group  mb-4">
                    <label asp-for="To" class="control-label text-black "></label>
                    <input asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Subject" class="control-label text-black"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Text" class="control-label text-black"></label>
                    <textarea asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <button type="submit" class="btn mt=4 btn-lg w-100" style="border-radius: 10px; color: white; background-color: #484C7F;">Send Mail</button>
                    <button asp-action="Index" class="btn btn-warning btn-lg w-100 mt-5" style="border-radius: 10px; color: white;">Back</button>
                </div>

            </form>
        </div>
    </div>
</div>