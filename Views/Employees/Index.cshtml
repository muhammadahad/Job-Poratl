@model IEnumerable<Ahad_Project.Models.Employee>

@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Employees</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-rounded width-lg waves-effect waves-light mb-2 mt-3" data-animation="fadein">Add Employee</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dep.Description)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-rounded width-lg waves-effect waves-light mb-2 mt-3" data-animation="fadein">Edit</a>
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-rounded width-lg waves-effect waves-light mb-2 mt-3" data-animation="fadein">Details</a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-rounded width-lg waves-effect waves-light mb-2 mt-3" data-animation="fadein">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
